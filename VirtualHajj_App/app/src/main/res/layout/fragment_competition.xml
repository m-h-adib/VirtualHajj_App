<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".CompetitionFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="در این بخش سوالات و مسابقات مختلفی در موسم حج و قبل و بعد از حج برگزار خواهد شد. همچنین جوایزی به قید قرعه به برندگان اهدا خواهد شد." />


        <TextView
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="مسابقات در قالب های مختلف ارائه می شود و شرکت کنندگان از همین نرم افزار سوالات را مشاهده کرده و جواب می دهند و نتیجه را با درج رتبه و نمره و نمودار دریافت خواهند کرد" />

        <Button
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="شرکت در مسابقه"
            android:background="@color/c1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adib.mh.honoraryreporter.Contact"
    tools:showIn="@layout/activity_contact">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/c2_2"
            android:id="@+id/web"
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/website"
                android:layout_width="60sp"
                android:layout_height="60sp" />
            <TextView
                android:layout_marginRight="10sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="وبسایت: http://amoozeshbeseh.ir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tel"
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/contact"
                android:layout_width="60sp"
                android:layout_height="60sp" />
            <TextView
                android:layout_marginRight="10sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="شماره تماس: 02537186602"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/c2_2"
            android:id="@+id/insta"
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/insta"
                android:layout_width="60sp"
                android:layout_height="60sp" />
            <TextView
                android:layout_marginRight="10sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="آی دی اینستاگرام: zaerhajj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dev"
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/adb"
                android:layout_width="60sp"
                android:layout_height="60sp" />
            <TextView
                android:layout_marginRight="10sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="برنامه نویس: محمد حسین ادیب"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/c2_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="3sp">

        </LinearLayout>
    </LinearLayout>
</ScrollView>
